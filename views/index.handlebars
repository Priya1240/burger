<img src="../assets/image/burger1.png" alt="burger" height="42" width="42">

<h1>Eat A Burger!</h1>


<div class="devour">
<div class="names">
  {{#each burgers}}
    {{#unless this.devoured}}
    <br>
       {{this.id}}
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button id="devour" type="submit">DEVOUR</button>
          
        </form>
             <br>
    {{/unless}}
  {{/each}}
</div>
</div>

<div class= "names1" class="devoured">
  {{#each burgers}}
    {{#if this.devoured}}
    <br>
    <br>
      
      {{this.id}}
        {{this.burger_name}}
    <br>
    <br>
      
    </div>
        
      
    {{/if}}
  {{/each}}


<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    
    <input type="text" id="ca" name="burger_name">
  </div>
    <br>
  <button id="sub" type="submit">Submit</button>
    <h3>Enter a burger you want to eat and click the "Submit" button.</h3>

</form>
