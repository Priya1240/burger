<img src="../assets/image/burger1.png" alt="burger" height="42" width="42">

<h1>Eat A Burger!</h1>


<div class="devour">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      {{this.id}}
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button id="devour" type="submit">DEVOUR</button>
        </form>
        
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
      {{this.id}}
        {{this.burger_name}}
    
      
    
        
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    
    <input type="text" id="ca" name="burger_name">
  </div>
    <br>
  <button type="submit">Submit</button>
    <h4>Enter a burger you want to eat and click the "Submit" button.</h4>

</form>
